{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "strict": true,
    "outDir": "dist",
    "rootDir": "src",
    "lib": ["ES2022"],
    "moduleResolution": "NodeNext",
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules"
    ],
  "include": ["src"],
  "esModuleInterop": true,
  "allowImportingTsExtensions": true
}
